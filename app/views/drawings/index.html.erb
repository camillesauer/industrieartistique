      <% @drawings.each do |drawing| %>
        <div class="drawing">
          <% if user_signed_in? %>
            <div class ="up-btn">
              <div class="btn"><%= link_to 'Supprimer', drawing_path(drawing),
                method: :delete,
                data: { confirm: 'Êtes-vous certain de vouloir supprimer?' } %></div>
              <div class="btn"><%= link_to "Editer", edit_drawing_path(drawing.id)%></div>
            </div>
          <% end %>
          <% unless drawing.title_2.present? %>
            <% else %>
              <div class='conf'>
                <h1 class="title-e"><%= drawing.title_2 %></h1>
                <%=  image_tag("code.jpg", alt: "Camille Sauer - all rights reserved.") %>
              </div>
          <% end %>
          <% unless drawing.title.present? %>
            <% else %>
              <div class='conf'>
                <h1 class='title-d'><%= link_to drawing.title, drawing_path(drawing)%></h1>
                <%= link_to image_tag("#{drawing.image_1}"), drawing_path(drawing) %>
              </div>
          <% end %>
        </div>
      <% end %>

